# E-EVKIN Modern - Staging Environment Configuration
# Optimized for 2GB RAM Ubuntu 24 + aaPanel server

# Environment Configuration
NODE_ENV=staging
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=e_evkin_staging
DB_USER=evkin_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# JWT Configuration (MUST CHANGE!)
JWT_SECRET=CHANGE_THIS_TO_VERY_LONG_SECURE_RANDOM_STRING_MIN_32_CHARACTERS
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://your-staging-domain.com

# Rate Limiting (optimized for 2GB server)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance tuning for 2GB RAM server
NODE_OPTIONS=--max-old-space-size=1024

# Optional: Debug mode (disable in production)
DEBUG=false
LOG_LEVEL=info
